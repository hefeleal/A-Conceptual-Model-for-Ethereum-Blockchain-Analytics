{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "error-reason": "off",
    "indentation": ["error", 2],
    "max-len": ["warning", 79],
    "no-constant": ["error"],
    "no-empty-blocks": "off",
    "quotes": ["error", "double"],
    "uppercase": "off",

    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": ["warning"]
  }
}
